<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:colorPrimary="@android:color/holo_orange_dark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <EditText android:id="@+id/question_pop_up"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/question_pop_up"
        android:textColorHint="#ffffff"/>

    <Button android:id="@+id/check_box"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:background="@drawable/check_mark"
        android:layout_weight="1" />

    <Button android:id="@+id/wrong_box"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:background="@drawable/wrong_mark"
        android:layout_weight="1" />
        />

</LinearLayout>
